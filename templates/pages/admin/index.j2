{% from "components/book.j2" import Book %}
{% from "components/icon.j2" import Icon %}

{% extends "layouts/empty.j2" %}

{% block content %}
{% include "components/header.j2" %}

<form class="add-book" method="post">
    <legend>Добавить книгу</legend>
    <label>
        Название книги
        <input type="text" class="input" required name="book_title">
    </label>
    <label>
        Автор
        <input type="text" class="input" required name="author">
    </label>
    <label>
        Год издания
        <input type="number" class="input" required name="year">
    </label>
    <label>
        Описание
        <textarea name="" id="" class="input" required name="description"></textarea>
    </label>
    <label>
        Издательство
        <input type="text" class="input" required name="publisher">
    </label>
    <label>
        Обложка
        <input type="text" class="input" name="book_cover">
    </label>
    <button type="submit" class="button">Добавить</button>
</form>

<style>
    .input {
        font: inherit;
        background-color: white;
        border: none;
        padding: 10px;
        display: block;
        border-radius: 8px;
    }

    .add-book legend {
        font-size: 36px;
        font-weight: 400;
        line-height: 44px;
        text-align: center;
    }

    .add-book {
        display: grid;
        gap: 20px;
        background-color: #eee;
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        border-radius: 8px;
        margin-top: 50px;
    }

    .add-book label {
        display: grid;
        gap: 10px
    }

    .button {
        background: #6236ff;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        color: white;
        font: inherit;
        border: none;
        margin: 0;
    }
</style>

{% endblock content %}
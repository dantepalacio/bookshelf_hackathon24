{% from "components/book.j2" import Book %}
{% from "components/icon.j2" import Icon %}

{% extends "layouts/empty.j2" %}

{% block content %}
{% include "components/header.j2" %}

<section class="hero">
    <h1 class="hero__title">{{ current_user.first_name }} {{ current_user.last_name }}</h1>
</section>

{% for section in sections %}
<section class="section bookshelf">
    <h2 class="section__title">{{ section.title }}</h2>
    <div class="bookshelf__list">
        {% for book in section.books %}
        {{ Book(book, class="bookshelf__book") }}
        {% endfor %}
    </div>
</section>
{% endfor %}

<style>
    .hero {
        display: grid;
        gap: 50px;
        padding-block: 80px;
    }

    .hero__features {
        display: flex;
        gap: 50px;
        justify-content: center;
    }

    .hero__icon--book {
        color: #6236ff
    }

    .hero__feature {
        width: 120px;
        text-align: center;
        font-size: 20px;
    }

    .hero__feature>* {
        margin: 0 auto;
    }

    .hero__feature .icon {
        margin-bottom: 8px;
    }

    .bookshelf {
        padding-top: 50px;
    }

    .bookshelf__list {
        display: flex;
        gap: 40px;
        flex-wrap: nowrap;
        overflow: auto;
        padding-inline: 100px;
        padding-block: 20px;
        scrollbar-width: none;
        scroll-snap-type: x mandatory;
        scroll-snap-stop: always;
    }

    .bookshelf__book {
        flex: var(--width) 0 0;
        scroll-snap-align: center;
    }

    .section__title {
        font-size: 36px;
        font-weight: 400;
        line-height: 44px;
        margin: 0;
        padding-inline: 100px;
    }

    .hero__title {
        font-size: 48px;
        font-weight: 700;
        line-height: 58px;
        text-align: center;
        max-width: 840px;
        margin: 0 auto;
        text-wrap: balance;
    }
</style>
{% endblock content %}
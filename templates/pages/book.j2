{% from "components/book.j2" import Book %}
{% from "components/icon.j2" import Icon %}

{% extends "layouts/empty.j2" %}

{% block content %}
{% include "components/header.j2" %}

<div class="book-page">
    <aside>
        <img src="{{ book.book_cover }}" class="book-page__image">
        <div class="book-page__actions">
            <button hx-post="#">читать позже</button>
            <a href="#">читать краткое содержание</a>
            {% if not book.is_in_bookshelf %}
            <button hx-post="{{ url_for('api.add_to_shelf', book=book.id) }}" hx-swap="outerHTML">добавить на
                полку</button>
            {% else %}
            на полке
            {% endif %}
        </div>
    </aside>

    <div class="book-page__container">
        <main>
            <div style="display: grid; gap: 16px">
                <h1 class="book-page__name">{{ book.name }}</h1>
                <p class="book-page__author">{{ book.author }}</p>
            </div>
            <p class="book-page__description">{{ book.description }}</p>
        </main>

        <section class="book-page__reviews">
            {% if current_user.is_authenticated %}
            <h2>Написать отзыв</h2>
            <form action="{{ url_for('api.review') }}" method="post">
                <div class="review__avatar"></div>
                <input type="hidden" name="book_id" value="{{ book.id }}">
                <textarea name="text"></textarea>
                <button class="button">Отправить</button>
            </form>
            {% endif %}
            <h2>Отзывы читателей</h2>
            <div class="reviews__list">
                {% for review in reviews %}
                <article class="review">
                    <div class="review__avatar"></div>
                    <h3 class="review__author">{{ review.user.first_name }} {{ review.user.last_name }}</h3>
                    <p class="review__rank">Глобал</p>
                    <p class="review__text">{{ review.text }}</p>
                </article>
                {% else %}
                Отзывов пока нет. Станьте первым
                {% endfor %}
            </div>
        </section>
    </div>


</div>

<style>
    .book-page__image {
        background-color: #C4C4C4;
        width: 300px;
        height: 400px;
        border-radius: 8px;
    }

    .review {
        position: relative;
    }

    .review :where(p, h3) {
        margin: 0;
    }

    .review__text {
        white-space: pre-wrap;
        margin-top: 16px;
    }

    .book-page__reviews form {
        position: relative;
    }

    .review__rank {
        color: #575656;
        margin-top: 8px;
    }

    .review__avatar {
        position: absolute;
        width: 70px;
        height: 70px;
        background-color: #ccc;
        right: calc(100% + 20px);
        border-radius: 100%;
    }

    .book-page__container {
        width: 100%;
    }

    .book-page__reviews {
        width: 850px;
        margin: 0 auto;
        margin-top: 100px;
        padding-bottom: 100px;
    }

    .reviews__list {
        display: grid;
        gap: 100px
    }

    .book-page__reviews textarea {
        width: 100%;
        min-height: 150px;
        background-color: #eee;
        border: none;
        border-radius: 8px;
        display: block;
        margin-bottom: 16px;
        padding: 1em;
        font: inherit
    }

    .button {
        background: #6236ff;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        color: white;
        font: inherit;
        border: none;
        margin: 0;
        margin-left: auto;
    }

    .book-page__description {
        white-space: pre-wrap;
    }

    .book-page main {
        width: 850px;
        margin: 0 auto;
    }

    .book-page {
        position: relative;
        padding-left: 100px;
        display: flex;
    }

    .book-page__name {
        font-size: 48px;
        font-weight: 700;
        line-height: 58px;
        margin: 0;
    }


    .book-page__author {
        color: #575656;
        margin: 0;
    }

    .book-page__actions {
        display: grid;
        gap: 10px;
        margin-top: 16px;
    }

    .book-page__actions button {
        font: inherit;
        text-align: left;
        background-color: transparent;
        border: none;
        padding: 0;
        margin: 0;
        color: #0066cc;
        text-decoration: underline;
        cursor: pointer;
    }
</style>

{% endblock content %}
{% from "components/book.j2" import Book %}

{% extends "layouts/empty.j2" %}

{% block content %}
{% include "components/header.j2" %}

<section class="hero">
    <h1 class="hero__title">Карагандинская областная универсальная научная библиотека имени Н. В. Гоголя</h1>
</section>

<section class="section bookshelf">
    <h2 class="section__title">Вам понравятся</h2>
    <div class="bookshelf__list">
        {% for i in range(10) %}
        {{ Book(none, class="bookshelf__book") }}
        {% endfor %}
    </div>
</section>

<style>
    .hero {
        display: grid;
        gap: 50px;
        padding-block: 80px;
    }

    .bookshelf__list {
        display: flex;
        gap: 40px;
        flex-wrap: nowrap;
        overflow: auto;
        padding-inline: 100px;
        padding-block: 20px;
        scrollbar-width: thin;
        scroll-snap-type: x mandatory;
        scroll-snap-stop: always;
    }

    .bookshelf__book {
        flex: var(--width) 0 0;
        scroll-snap-align: center;
    }

    .section__title {
        font-size: 36px;
        font-weight: 400;
        line-height: 44px;
        margin: 0;
        padding-inline: 100px;
    }

    .hero__title {
        font-size: 48px;
        font-weight: 700;
        line-height: 58px;
        text-align: center;
        max-width: 840px;
        margin: 0 auto;
        text-wrap: balance;
    }
</style>
{% endblock content %}